<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shrinkify</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-light bg-primary">
      <a class="navbar-brand text-white" href="/">
        <img src="/logo/Shrinkify.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Shrinkify
      </a>
    </nav>
    <div class="container">
        <div class="container align-items-center  px-0 py-0">
          <form action="/" method="POST" class="row g-3 my-4">
              <div class="col-auto">
                <label for="fullUrl" id="fullUrl" class="visually-hidden">Url</label>
              </div>
              <div class="col-8 justify-content-center">
                <input type="url" name="fullUrl" class="col form-control" id="fullUrl" placeholder="Url">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Shrinkify</button>
              </div>
            </form>
        </div>

    <div class="container">
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>

            <% shrinks.forEach(shrink => { %> 
            <tr>
              <td>
                <a href="<%= shrink.fullUrl %> "
                  ><%= shrink.fullUrl %> </a
                >
              </td>
              <td><a href="<%= shrink.shortUrl %> "><%= shrink.shortUrl %> </a></td>
              <td><%= shrink.clicks %> </td>
            </tr>
              <% }) %> 
          </tbody>
        </table>
    </div>
    </div>
  </body>
</html>
